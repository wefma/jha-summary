{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/config-schema.json",
  "title": "JHA Summary Config",
  "type": "object",
  "properties": {
    "spread_sheet_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "max_range": {
      "type": "string",
      "pattern": "^[A-Z]+\\d+$"
    },
    "game_specific": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/gameSpecificEntry"
      }
    }
  },
  "required": [
    "spread_sheet_ids",
    "max_range",
    "game_specific"
  ],
  "additionalProperties": false,
  "definitions": {
    "gameSpecificEntry": {
      "type": "object",
      "properties": {
        "game": {
          "type": "string",
          "minLength": 1
        },
        "same_as": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "departments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/departmentEntry"
          }
        }
      },
      "required": [
        "game"
      ],
      "additionalProperties": false
    },
    "departmentEntry": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "same_as": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}
